<!DOCTYPE html>
<html lang="es">
<head>
  <title><%= @titulo %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render :partial => "layouts/cabecera" %>
    <% if hay_banner? %>
      <%= yield :imagen %>
    <% else %>
      <%= render :partial => "layouts/intro" %>
    <% end %>
    <div class="row">
      <div class="col-md-12">
        <%= yield %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12"><br/><br/></div>
    </div>
    <% if not hay_banner? %>
      <%= render :partial => "layouts/destacado" %>
    <% end %>
    <%= render :partial => "layouts/piepagina" %>
  </div>
</body>
</html>
